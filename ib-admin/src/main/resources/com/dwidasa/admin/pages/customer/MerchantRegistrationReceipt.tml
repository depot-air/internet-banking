<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title" group="message:group"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="main_content">
    <span class="emb_left"></span>
    <span class="emb_right"></span>
    <span class="emb_botleft"></span>
    <span class="emb_botright"></span>
    <span class="emb_footrpt"></span>
    <h2>${message:title}</h2>

    <t:form class="formfield" clientValidation="submit">
        <fieldset>            	
	    	<table >              
                <tr>                	
                    <td colspan="2">
                        <div id="notivy_yellow">
					    <div id="notivy_message" align="center">
					        ${message:activation}
					        <br />
					        ${message:pleaseActivate}
					    </div>
					</div>
                    </td>
                </tr>
            </table>
            <table> 
                <tr class="odd">
                    <td class="first">
                        <label>${message:userId}</label>
                    </td>
                    <td>
                        <label>:</label>
                    </td>
                    <td class="last">
                        <label>${customer.customerUsername}</label>
                    </td>
                </tr>
                <tr class="even">
                    <td class="first">
                        <label>${message:accountNumber}</label>
                    </td>
                    <td>
                        <label>:</label>
                    </td>
                    <td class="last">
                        <label>${customerAccount.accountNumber}</label>
                    </td>
                </tr>
                <tr class="odd">
                    <td class="first">
                        <label>${message:merchantId}</label>
                    </td>
                    <td>
                        <label>:</label>
                    </td>
                    <td class="last">
                        <label>${customerDevice.terminalId}</label>
                    </td>
                </tr>
                <tr class="even">
                    <td class="first">
                        <label>${message:serialNumber}</label>
                    </td>
                    <td>
                        <label>:</label>
                    </td>
                    <td class="last">
                        <label>${customerDevice.deviceId}</label>
                    </td>
                </tr>
            </table>
        </fieldset>
    	<hr/>
    </t:form>
    
</div>

</html>