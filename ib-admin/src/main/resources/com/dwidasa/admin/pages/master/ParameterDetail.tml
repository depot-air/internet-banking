<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title" group="message:group"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="main_content">
    <span class="emb_left"></span>
    <span class="emb_right"></span>
    <span class="emb_botleft"></span>
    <span class="emb_botright"></span>
    <span class="emb_footrpt"></span>

    <h2>${message:title}</h2>

    <form t:type="form" class="formfield" t:id="parameterDetail" clientValidation="submit" autofocus="false">
        <fieldset>
            <legend>${subtitle}</legend>
            <table>
                <tr class="odd">
                    <td class="first">
                        <t:label for="parameterName"/>
                    </td>
                    <td class="last">
                        <input t:id="parameterName" value="parameter.parameterName" t:type="textfield"
                               validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <t:label for="parameterValue"/>
                    </td>
                    <td>
                        <input t:id="parameterValue" value="parameter.parameterValue" t:type="textfield"
                               validate="required"/>
                    </td>
                </tr>
                <tr class="odd">
                    <td>
                        <t:label for="description"/>
                    </td>
                    <td>
                        <input t:id="description" value="parameter.description" t:type="textfield"
                               validate="required"/>
                    </td>
                </tr>
            </table>
        </fieldset>
        <hr/>
        <t:submit t:id="back" class="grey_btn ml10" value="message:back" mode="cancel"/>
        <t:submit t:id="add" class="green_btn mr10" value="prop:action"/>
    </form>
</div>
</html>
