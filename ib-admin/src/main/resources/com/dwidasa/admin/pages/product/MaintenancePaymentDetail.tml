<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title" group="message:group"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="main_content">
    <span class="emb_left"></span>
    <span class="emb_right"></span>
    <span class="emb_botleft"></span>
    <span class="emb_botright"></span>
    <span class="emb_footrpt"></span>

    <h2>${message:title}</h2>

    <form t:type="form" class="formfield" t:id="maintenancePaymentDetail" clientValidation="submit" >
        <fieldset>
            <legend>${message:subtitleProduct}</legend>
            <table>
                <tr class="odd">
                    <td class="first">
                        <t:label for="transactionType"/>
                    </td>
                    <td class="last">
                        <t:select t:id="transactionType" t:model="transactionTypeModel" value="transactionType"
                                  zone="productNameZone" label="message:transactionType" t:validate="required" disabled="${edit}"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <t:label for="productName"/>
                    </td>
                    <td>
                        <t:zone t:id="productNameZone" id="productNameZone">
                            <t:select t:id="productName" t:model="productNameModel" value="providerProduct.billerProductId"
                                      label="message:productName" disabled="${edit}" t:validate="required"/>
                        </t:zone>
                    </td>
                </tr>
            </table>
        </fieldset>
        <fieldset>
            <legend>${message:subtitleProvider}</legend>
            <table>
                <tr class="odd">
                    <td class="first">
                        <t:label for="providerName"/>
                    </td>
                    <td class="last">
                        <t:select t:id="providerName" t:model="providerNameModel" value="providerProduct.providerId"
							label="message:providerName" disabled="${edit}" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td>
                       <t:label for="fee"/>
                    </td>
                    <td>
                        <input t:id="fee" value="providerProduct.fee" t:type="textfield"
                               validate="required" label="message:fee" translate="numberFormat:##0"/>
                    </td>
                </tr>
            </table>
        </fieldset>
        <hr/>
        <t:submit t:id="back" class="grey_btn ml10" value="message:back" mode="cancel"/>
        <t:submit t:id="add" class="green_btn mr10" value="prop:action"/>
    </form>
</div>
</html>
