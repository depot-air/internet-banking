<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="ct_right">
    <div id="page_title">
        <div class="ground_1"></div>
        <div class="ground_2"><p>${message:title}</p></div>
        <div class="ground_3"></div>
    </div>
    <form t:type="form" class="full-form" t:id="accountStatusReceipt" clientValidation="submit">
        <div class="page_panel">
            <div class="ground_1"></div>
            <div class="ground_2"></div>
            <div class="ground_3"></div>
            <div class="ground_4"></div>
            <div class="ground_5"></div>
            <div class="ground_6"></div>
            <div class="main_form">
                <fieldSet>
                    <table>
                        <tr class="even">
                            <td>
                                <label>${message:referenceNumber}</label>
                            </td>
                            <td>
                                <label>${resultView.referenceNumber}</label>
                            </td>
                        </tr>
                        <tr class="odd">
                            <td>
                                <label>${message:date}</label>
                            </td>
                            <td>
                                <label>${nowDate}</label>
                            </td>
                        </tr>
                        <tr t:type="loop" source="accountNumber"  value="accountNumberValue"
                            class="prop:evenOdd.next" index="index">
                            <t:if test="index">
                                <td></td>
                                <p:else>
                                    <td class="setter">
                                        <label>${message:accountNumber}</label>
                                    </td>
                                </p:else>
                            </t:if>
                            <td>
                                <label>${accountNumberValue}</label>
                            </td>
                        </tr>

                        <tr class="odd">
                            <td>
                                <label>${message:status}</label>
                            </td>
                            <td>
                                <label>${status}</label>
                            </td>
                        </tr>
                    </table>
                </fieldSet>
            </div>
        </div>

        <div id="form_submit_btn">
            <t:submit t:id="print" value="message:print" class="btn_style"/>
            <t:submit t:id="save" value="message:save" class="btn_style"/>
            <t:submit t:id="back" value="message:back" class="btn_style"/>
        </div>

    </form>

</div>

</html>