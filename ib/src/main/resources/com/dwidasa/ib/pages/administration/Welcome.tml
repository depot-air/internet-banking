<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="ct_right">
    <div id="page_title">
        <div class="ground_1"></div>
        <div class="ground_2"><p>${message:title}</p></div>
        <div class="ground_3"></div>
    </div>

    <form t:type="form" class="full-form" t:id="welcome"
          t:clientValidation="submit">

        <t:errors banner="message:errorBanner"/>
        <h4>${message:didik}</h4>

        <div class="page_panel">
            <div class="ground_1"></div>
            <div class="ground_2"></div>
            <div class="ground_3"></div>
            <div class="ground_4"></div>
            <div class="ground_5"></div>
            <div class="ground_6"></div>
            <div class="main_form">
                <fieldSet>
                    ${message:softToken1} <br></br>
                    ${message:softToken2} <a href="message:linkInstaller">
                    ${message:linkInstaller}</a><br></br>
                    ${message:softToken3}
                </fieldSet>
            </div>
        </div>

        <h4>${message:softTokenActivate}</h4>

        <div class="page_panel">
            <div class="ground_1"></div>
            <div class="ground_2"></div>
            <div class="ground_3"></div>
            <div class="ground_4"></div>
            <div class="ground_5"></div>
            <div class="ground_6"></div>
            <div class="main_form">
                <fieldSet>
                    ${message:askActive}<br></br>

                    <div id="form_submit_btn">
                        <t:submit t:id="active" value="message:active" class="btn_style"/>
                        <t:submit t:id="sendActiveCode" value="message:sendCode" class="btn_style"/>
                    </div>
                </fieldSet>
            </div>
        </div>

        <ul>
            <li>${message:condition}</li>
        </ul>
    </form>


</div>
</html>
