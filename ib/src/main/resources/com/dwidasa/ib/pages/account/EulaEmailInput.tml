	            <div id="login_content">
	                <span class="emb_left"></span>
	                <span class="emb_right"></span>
	                <span class="emb_botleft"></span>
	                <span class="emb_botright"></span>
	                <span class="emb_footrpt"></span>
	
<!-- 	                <div id="login_image"></div> -->
	                <form t:type="form" class="full-form" t:id="loginForm">
	                    <fieldSet>
	                    	<p>${message:inputEmail}</p>
	                    		<label>${message:email}</label><br/>
	                    		<div id="input"><span class="login_left"></span><span class="login_right"></span></div>
	                    		
	                    		<label>${message:emailConfirm}</label><br/>
	                    		<div id="input"><span class="login_left"></span><span class="login_right"></span></div>
	                    		
	                    		<t:submit id="next" value="message:next" class="grey_btn"/>
	                    		
