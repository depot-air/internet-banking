                <td>${trainPaymentView.referenceName}</td>
            </tr>
            <tr>
                <td style="font-weight:bold;">${message:numOfPassenger}</td>
                <td>:</td>
                <td>${trainPaymentView.numOfPassenger}</td>
            </tr>
            <tr>
                <td style="font-weight:bold;">${message:tripInfo}</td>
                <td>:</td>
                <td>${trainPaymentView.tripInfo}</td>
            </tr>
            <tr>
                <td style="font-weight:bold;">${message:departureDate}</td>
                <td>:</td>
                <td>
                   <t:output value="trainPaymentView.departureDate" format="longDate"/>
