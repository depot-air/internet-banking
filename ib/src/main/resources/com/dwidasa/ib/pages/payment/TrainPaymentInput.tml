<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="message:title" group="message:group"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

<div id="main_content">
    <span class="emb_left"></span>
    <span class="emb_right"></span>
    <span class="emb_botleft"></span>
    <span class="emb_botright"></span>
    <span class="emb_footrpt"></span>

    <h2>${message:title}</h2>

    <div class="ico_position ico_favorite_13"></div>

    <t:form class="formfield" clientValidation="submit">
        <t:errors banner="message:errorBanner"/>
        <t:account accountNumber="trainPaymentView.accountNumber" cardNumber="trainPaymentView.cardNumber"/>
        <hr/>
        <fieldSet>
            <legend>${message:paymentData}</legend>
            <table>
                <tr class="odd">
                    <td class="first">
                        <t:label for="bookingCode"/>
                    </td>
                    <td class="last">
                        <input t:type="textField" t:id="bookingCode" t:value="trainPaymentView.customerReference"
                               validate="required, minLength=5" maxLength="20" label="message:bookingCode"/>
                    </td>
                </tr>
            </table>
        </fieldSet>
        <t:submit t:id="next" value="message:next" class="grey_btn mr10"/>
    </t:form>
</div>
</html>
